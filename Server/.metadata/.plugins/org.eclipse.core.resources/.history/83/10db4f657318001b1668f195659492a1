package DB;

import com.android.mobilepersonaltrainerclient.Model.User;

import Server.Send;

public class Select extends DBConnection{
	
	public boolean CheckUser(User user) {
		String sql ="SELECT * FROM user";
		
		try {
			rs = st.executeQuery(sql);
			while(rs.next()) {
				if(user.getUser_id().equals(rs.getString("user_id"))) {
					//System.out.println("O");
					return true;
				}else {
					return false;
				}
				
			}
			//System.out.println("X");
		}catch(Exception e) {
			System.out.println("(!)Select.Checkuser : ");
			e.printStackTrace();
		}
		return false;
	}

}
